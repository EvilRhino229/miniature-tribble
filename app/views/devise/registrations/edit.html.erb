<h2>Edit <%= resource_name.to_s.humanize %></h2>

  <div class="row col-md-6 field form-group">
    you're user number <%= @current_user.id %>!
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-6 field form-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 field form-group">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="field form-group col-md-6">
      <%= f.label(:profile_image, "Add profile image") %>
      <br>
      <%= f.file_field(:profile_image) %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="row">
    <div class="col-md-6 field form-group">
      <%= f.label :password %> <i>(you don't have to)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 field form-group">
      <%= f.label :current_password %> <i>(trust me, you need to type your current password)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="row">
    <div class="actions col-md-6 form-group">
      <%= f.submit "Recreate your online persona", class: "btn btn-warning" %>
    </div>
  <% end %>
  </div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back, class: "btn btn-light" %>
